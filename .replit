modules = ["nodejs-20", "web", "postgresql-16", "python-3.11", "python3"]
run = "workflow.run Project"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["libxcrypt", "postgresql"]

[deployment]
deploymentTarget = "autoscale"
# Para autoscale en producci√≥n normalmente se expone un solo servicio.
# En dev seguimos usando workflows paralelos.
build = ["pip install -r requirements.txt", "npm install", "npm run build"]
run = ["uvicorn app.main:app --host 0.0.0.0 --port 8000"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
# Backend FastAPI
task = "shell.exec"
args = "pip install -r requirements.txt && uvicorn app.main:app --host 0.0.0.0 --port 8000"
waitForPort = 8000

[[workflows.workflow.tasks]]
# Frontend (Vite/Next/etc.)
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000
